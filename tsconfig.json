{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    // âœ… Add this:
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/pages/components/ui/Icons.jsx",
    "src/pages/components/layout/Header.jsx"
, "src/pages/components/ui/Button.jsx", "src/pages/components/Banner.jsx", "src/pages/components/Testimonial.jsx"  ],
  "exclude": ["node_modules"]
}
